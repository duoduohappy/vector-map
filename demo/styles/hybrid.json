{
  "version": 8,
  "name": "openmap.lt",
  "metadata": {
    "maputnik:renderer": "mbgljs"
  },
  "sources": {
    "orto": {
      "type": "raster",
      "attribution": "© NŽT ORT10LT",
      "tiles": [
        "https://ort10lt.openmap.lt/g16/{z}/{x}/{y}.jpeg"
      ],
      "tileSize": 256
    },
    "osm": {
      "type": "vector",
      "attribution": "© <a href='https://www.openstreetmap.org/copyright'>OpenStreetMap contributors</a>",
      "tiles": [
        "https://openmap.lt/all/{z}/{x}/{y}.pbf"
      ]
    }
  },
  "sprite": "https://openmap.lt/sprites/osm-liberty",
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "overlay",
      "type": "raster",
      "source": "orto",
      "minzoom": 0,
      "maxzoom": 18
    },
    {
      "id": "country-boundary",
      "type": "line",
      "source": "osm",
      "source-layer": "boundaries",
      "minzoom": 0,
      "maxzoom": 20,
      "filter": [
        "all",
        [
          "==",
          "kind",
          "country"
        ]
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "rgba(211, 175, 175, 1)",
        "line-width": {
          "base": 2,
          "stops": [
            [
              1,
              1
            ],
            [
              7,
              4
            ]
          ]
        },
        "line-translate-anchor": "map"
      }
    },
    {
      "id": "state-boundary",
      "type": "line",
      "source": "osm",
      "source-layer": "boundaries",
      "minzoom": 6,
      "maxzoom": 20,
      "filter": [
        "all",
        [
          "==",
          "kind",
          "region"
        ]
      ],
      "layout": {},
      "paint": {
        "line-color": "rgba(211, 175, 175, 1)",
        "line-width": 3
      }
    },
    {
      "id": "link-tunnel",
      "type": "line",
      "source": "osm",
      "source-layer": "roads",
      "filter": [
        "any",
        [
          "==",
          "is_tunnel",
          "yes"
        ]
      ],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#afd3d3",
        "line-width": {
          "base": 1.55,
          "stops": [
            [
              4,
              0.25
            ],
            [
              20,
              30
            ]
          ]
        },
        "line-dasharray": [
          1,
          2
        ]
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "osm",
      "source-layer": "roads",
      "minzoom": 8,
      "filter": [
        "any",
        [
          "in",
          "kind",
          "residential",
          "unclassified",
          "living_street",
          "service"
        ],
        [
          "in",
          "kind",
          "trunk",
          "trunk_link",
          "primary",
          "primary_link",
          "secondary",
          "secondary_link",
          "tertiary",
          "tertiary_link"
        ]
      ],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#c0c4c2",
        "line-width": {
          "base": 1.55,
          "stops": [
            [
              4,
              0.25
            ],
            [
              20,
              30
            ]
          ]
        },
        "line-opacity": 0.5
      }
    },
    {
      "id": "link-bridge",
      "type": "line",
      "source": "osm",
      "source-layer": "roads",
      "filter": [
        "any",
        [
          "==",
          "is_link",
          "yes"
        ],
        [
          "==",
          "is_bridge",
          "yes"
        ]
      ],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#c0c4c2",
        "line-width": {
          "base": 1.55,
          "stops": [
            [
              4,
              0.5
            ],
            [
              8,
              1.5
            ],
            [
              20,
              40
            ]
          ]
        },
        "line-opacity": 0.5
      }
    },
    {
      "id": "highway",
      "type": "line",
      "source": "osm",
      "source-layer": "roads",
      "filter": [
        "all",
        [
          "in",
          "kind",
          "motorway",
          "trunk"
        ]
      ],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#5d6765",
        "line-width": {
          "base": 1.55,
          "stops": [
            [
              4,
              1
            ],
            [
              8,
              2
            ],
            [
              20,
              40
            ]
          ]
        },
        "line-opacity": 0.5
      }
    },
    {
      "id": "path",
      "type": "line",
      "source": "osm",
      "source-layer": "roads",
      "minzoom": 12,
      "maxzoom": 24,
      "filter": [
        "all",
        [
          "in",
          "kind",
          "path",
          "footway",
          "track"
        ]
      ],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#5d6765",
        "line-width": {
          "base": 1.8,
          "stops": [
            [
              10,
              0.15
            ],
            [
              20,
              15
            ]
          ]
        },
        "line-dasharray": [
          2,
          2
        ],
        "line-opacity": 0.7
      }
    },
    {
      "id": "country-label",
      "type": "symbol",
      "source": "osm",
      "source-layer": "places",
      "maxzoom": 7,
      "filter": [
        "all",
        [
          "==",
          "$type",
          "Point"
        ],
        [
          "==",
          "kind",
          "country"
        ]
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Roboto Condensed Italic"
        ],
        "text-max-width": 4,
        "text-size": {
          "stops": [
            [
              2,
              24
            ],
            [
              6,
              21
            ]
          ]
        }
      },
      "paint": {
        "text-color": "#cb4b49",
        "text-halo-color": "rgba(255,255,255,0.5)"
      }
    },
    {
      "id": "state-label",
      "type": "symbol",
      "source": "osm",
      "source-layer": "places",
      "minzoom": 6,
      "maxzoom": 12,
      "filter": [
        "all",
        [
          "==",
          "$type",
          "Point"
        ],
        [
          "==",
          "kind",
          "state"
        ]
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Roboto Condensed Italic"
        ],
        "text-max-width": 8,
        "text-size": {
          "stops": [
            [
              7,
              18
            ],
            [
              10,
              30
            ]
          ]
        }
      },
      "paint": {
        "text-color": "#f27a87",
        "text-halo-color": "rgba(255,255,255,0.5)"
      }
    },
    {
      "id": "city-label",
      "type": "symbol",
      "source": "osm",
      "source-layer": "places",
      "minzoom": 10,
      "maxzoom": 14,
      "filter": [
        "all",
        [
          "==",
          "$type",
          "Point"
        ],
        [
          "in",
          "kind",
          "city",
          "county",
          "district",
          "town",
          "village"
        ]
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Roboto Medium"
        ],
        "text-max-width": 10,
        "text-letter-spacing": 0.1,
        "text-size": {
          "stops": [
            [
              8,
              12
            ],
            [
              12,
              13
            ]
          ]
        }
      },
      "paint": {
        "text-color": "#f7f9f9",
        "text-halo-color": "rgba(255,255,255,0.5)"
      }
    },
    {
      "id": "other-label",
      "type": "symbol",
      "source": "osm",
      "source-layer": "places",
      "minzoom": 12,
      "filter": [
        "all",
        [
          "==",
          "$type",
          "Point"
        ],
        [
          "in",
          "kind",
          "neighbourhood",
          "hamlet",
          "suburb"
        ]
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Roboto Regular"
        ],
        "text-max-width": 10,
        "text-size": {
          "stops": [
            [
              12,
              12
            ],
            [
              20,
              11
            ]
          ]
        },
        "icon-allow-overlap": false
      },
      "paint": {
        "text-color": "#cb4b49",
        "text-halo-color": "rgba(255,255,255,0.5)"
      }
    },
    {
      "id": "water-label",
      "type": "symbol",
      "source": "osm",
      "source-layer": "water",
      "minzoom": 10,
      "maxzoom": 20,
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Roboto Regular"
        ],
        "symbol-placement": "line",
        "text-rotation-alignment": "auto"
      }
    },
    {
      "id": "road-label",
      "type": "symbol",
      "source": "osm",
      "source-layer": "roads",
      "minzoom": 10,
      "maxzoom": 20,
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Roboto Regular"
        ],
        "symbol-placement": "line",
        "text-rotation-alignment": "auto",
        "text-size": 13
      },
      "paint": {
        "text-color": "rgba(0, 0, 0, 1)",
        "text-halo-width": 2,
        "text-halo-color": "rgba(255, 255, 255, 0.7)"
      }
    },
    {
      "id": "poi",
      "type": "symbol",
      "source": "osm",
      "source-layer": "poi",
      "minzoom": 14,
      "maxzoom": 20,
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Roboto Regular"
        ],
        "symbol-placement": "point",
        "text-rotation-alignment": "auto",
        "text-size": 12,
        "text-max-width": 9,
        "text-anchor": "top",
        "text-offset": [
          0,
          0.6
        ],
        "icon-image": "{kind}"
      },
      "paint": {
        "text-color": "rgba(0, 0, 0, 1)",
        "text-halo-width": 2,
        "text-halo-color": "rgba(255, 255, 255, 0.7)"
      }
    }
  ],
  "id": "hybrid-style"
}
